diff --git a/src/coreclr/build.sh b/src/coreclr/build.sh
index 701c631528..a703899114 100755
--- a/src/coreclr/build.sh
+++ b/src/coreclr/build.sh
@@ -93,6 +93,9 @@ initHostDistroRid()
 
 initTargetDistroRid()
 {
+    export __DistroRid=linux-arm
