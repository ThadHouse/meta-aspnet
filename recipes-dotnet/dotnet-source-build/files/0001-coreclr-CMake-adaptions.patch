    else()
-     add_compile_options(-target armv7-linux-gnueabihf)
+     #add_compile_options(-target armv7-linux-gnueabihf)
    endif(ARM_SOFTFP)
 endif(CLR_CMAKE_PLATFORM_UNIX_ARM)
 
