     if [ $__CrossBuild == 1 ]; then
         if [ "$__BuildOS" == "Linux" ]; then
             if [ ! -e $ROOTFS_DIR/etc/os-release ]; then
diff --git a/src/coreclr/compileoptions.cmake b/src/coreclr/compileoptions.cmake
