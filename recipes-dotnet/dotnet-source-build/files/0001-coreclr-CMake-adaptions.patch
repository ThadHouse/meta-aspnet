 elseif(TARGET_ARCH_NAME STREQUAL "arm64")
   include_directories(SYSTEM ${CROSS_ROOTFS}/usr/include)
@@ -68,8 +68,8 @@ if(TARGET_ARCH_NAME STREQUAL "armel")
   endif()
